<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="3dp"
    tools:context=".ui.MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_top_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_bottom_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_clients"
        style="@style/Button.maxApp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/clients_label"
        app:icon="@drawable/ic_maxima_pessoas"
        app:layout_constraintBottom_toTopOf="@id/gl_center_horizontal"
        app:layout_constraintEnd_toStartOf="@id/gl_center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gl_top_horizontal" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_requests"
        style="@style/Button.maxApp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/label_requests"
        app:icon="@drawable/ic_maxima_pedido"
        app:layout_constraintBottom_toTopOf="@id/gl_center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/gl_center_vertical"
        app:layout_constraintTop_toBottomOf="@id/gl_top_horizontal" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_sales_summary"
        style="@style/Button.maxApp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/label_sales_summary"
        app:icon="@drawable/ic_maxima_resumo_vendas"
        app:layout_constraintBottom_toTopOf="@+id/gl_bottom_horizontal"
        app:layout_constraintEnd_toStartOf="@+id/gl_center_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gl_center_horizontal" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_tools"
        style="@style/Button.maxApp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/label_tools"
        app:icon="@drawable/ic_maxima_ferramentas"
        app:layout_constraintBottom_toTopOf="@+id/gl_bottom_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/gl_center_vertical"
        app:layout_constraintTop_toTopOf="@+id/gl_center_horizontal" />


</androidx.constraintlayout.widget.ConstraintLayout>