<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".5"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/_cv_status_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="100dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/status_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#95989A"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_maxima_em_processamento" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/_numero_rca_erp"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="N°Ped. RCA/ERP:"
            android:fontFamily="@font/santral_medium"
            app:layout_constraintStart_toEndOf="@id/_cv_status_image"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/numero_rca_erp"
           style="@style/TextLabelBlack.maxApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/_numero_rca_erp"
            app:layout_constraintTop_toTopOf="@id/_numero_rca_erp"
            />

        <TextView
            android:id="@+id/_cliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/santral_medium"
            app:layout_constraintStart_toStartOf="@id/_numero_rca_erp"
            app:layout_constraintTop_toBottomOf="@id/_numero_rca_erp"
            android:text="Cliente:"/>

        <TextView
            android:id="@+id/cliente"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:paddingEnd="50dp"
            app:layout_constraintStart_toEndOf="@id/_cliente"
            app:layout_constraintBottom_toTopOf="@id/status"
            style="@style/TextLabelBlack.maxApp"
            app:layout_constraintTop_toTopOf="@id/_cliente"
            app:layout_constraintEnd_toStartOf="@id/legenda"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/_cliente"
            app:layout_constraintTop_toBottomOf="@id/cliente"
            style="@style/TextLabelBlack.maxApp"/>

        <TextView
            android:id="@+id/_critica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crítica:"
            android:fontFamily="@font/santral_medium"
            android:visibility="invisible"
            android:layout_margin="3dp"
            app:layout_constraintStart_toEndOf="@id/guideline"
            app:layout_constraintTop_toTopOf="@id/status"/>

        <ImageView
            android:id="@+id/critica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/_critica"
            app:layout_constraintTop_toTopOf="@id/_critica"
            app:layout_constraintBottom_toBottomOf="@id/_critica"/>

        <TextView
            android:id="@+id/data"
            android:fontFamily="@font/santral_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/legenda"
            app:layout_constraintTop_toBottomOf="@id/data"
            app:layout_constraintEnd_toEndOf="@id/data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/gray"
            app:layout_constraintStart_toStartOf="@id/_numero_rca_erp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
